<div class="contact-card">
    <h4><%= @contact.name%></h4>
    <div class="contact-card-child">
        <%= image_tag "https://www.gravatar.com/avatar/#{@contact.gravatar_hash}?d=https://lh5.googleusercontent.com/b-Jql03P36CNooFuW12n8OkT6_StQnZshef9oKPe69ugEVD5VfnzVZK4QZ_SCfC6dCyNhbtK8mJfcSE=w1920-h946" %>
    </div>
    <div class="contact-card-child">
        <ul>
        <% if @contact.email %>
            <li><strong>Email:</strong> <%= mail_to @contact.email, @contact.email, subject: "Hello #{@contact.name}" %></li>
        <% end %>

        <li><strong>Default Phone: <%= "#{@contact.default_phone.location[0]}:" if @contact.default_phone %></strong> <%= @contact.default_phone&.number %></li>
        <% if @contact.other_phones.size >= 1 %>
            <li><strong>Other Phones:
                <ul>
                <% @contact.other_phones.each do |telephone| %>
                    <li><strong> <%= telephone.location[0] %>:</strong> <%= telephone.number %></li>
                <% end %>
                </ul>
            </li>
        <% end %>
        <% if @contact.birthday %>
            <li><strong>Birthday:</strong> <%= @contact.birthday.strftime('%-m/%-d/%Y') %></li>
        <% end %>
        </ul>
        <%= link_to "Edit Contact", edit_contact_path(@contact) %>
    </div>
    <div class="contact-card-child">
       <strong>Notes: </strong><%= simple_format(@contact.notes) %>
    </div>
</div>